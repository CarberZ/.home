" Ordered list of preferred fonts
set guifont=Inconsolata\ 13,DejaVu\ Sans\ Mono\ 12

" Overwrite listchars in .vimrc; we should have better font support in gvim
set listchars=
set listchars+=eol:¬
set listchars+=tab:»\ " Note the literal space
set listchars+=trail:·
set listchars+=extends:>
set listchars+=precedes:<
set listchars+=nbsp:·
